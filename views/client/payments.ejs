<%- include('../partials/header') %>

<div class="container" style="padding: 2rem 0;">
    <div style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem; color: #4f46e5;">💳 Payment History</h1>
        <p style="color: rgba(255, 255, 255, 0.8);">View all your payment transactions</p>
    </div>

    <div class="card">
        <div style="padding: 1.5rem; border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
            <h2 style="font-size: 1.5rem; color: #4f46e5; margin: 0;">Transaction History</h2>
        </div>
        
        <% if (client.paymentHistory && client.paymentHistory.length > 0) { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Property</th>
                            <th>Agent</th>
                            <th>Reference</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% client.paymentHistory.forEach(payment => { %>
                            <tr>
                                <td style="color: rgba(255, 255, 255, 0.9);">
                                    <%= new Date(payment.date).toLocaleDateString() %>
                                </td>
                                <td style="color: #51cf66; font-weight: 600;">
                                    ₦<%= payment.amount.toLocaleString() %>
                                </td>
                                <td style="color: rgba(255, 255, 255, 0.9);">
                                    <% if (payment.propertyId) { %>
                                        <%= payment.propertyId.title || 'Property' %>
                                    <% } else { %>
                                        Property
                                    <% } %>
                                </td>
                                <td style="color: rgba(255, 255, 255, 0.9);">
                                    <% if (payment.agentId) { %>
                                        <%= payment.agentId.fullName || 'Agent' %>
                                    <% } else { %>
                                        Agent
                                    <% } %>
                                </td>
                                <td style="color: rgba(255, 255, 255, 0.6);">
                                    <%= payment.reference %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div style="padding: 3rem; text-align: center;">
                <div style="color: rgba(255, 255, 255, 0.7);">
                    <div style="font-size: 4rem; margin-bottom: 1rem;">💳</div>
                    <p style="font-size: 1.25rem; margin-bottom: 1rem;">No payment history found</p>
                    <p>You haven't made any payments yet. <a href="/client/dashboard" style="color: #4f46e5;">Browse properties</a> to get started.</p>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Summary Card -->
    <div class="card" style="margin-top: 2rem;">
        <h3 style="font-size: 1.5rem; margin-bottom: 1.5rem; color: #4f46e5;">📊 Payment Summary</h3>
        <div class="stats-grid">
            <div class="stat-card">
                <span class="stat-icon">📊</span>
                <span class="stat-number"><%= client.paymentHistory.length %></span>
                <span class="stat-label">Total Transactions</span>
            </div>
            <div class="stat-card">
                <span class="stat-icon">💰</span>
                <span class="stat-number">₦<%= client.paymentHistory.reduce((sum, payment) => sum + payment.amount, 0).toLocaleString() %></span>
                <span class="stat-label">Total Amount Spent</span>
            </div>
            <div class="stat-card">
                <span class="stat-icon">👥</span>
                <span class="stat-number"><%= client.unlockedAgents.length %></span>
                <span class="stat-label">Agents Unlocked</span>
            </div>
        </div>
    </div>

    <div style="text-align: center; margin-top: 2rem;">
        <a href="/client/dashboard" class="btn btn-primary btn-lg">← Back to Dashboard</a>
    </div>
</div>

<%- include('../partials/footer') %>